@model ZwartOpWit.Models.UserVM

@{

}
<h1>Update</h1>
<div>
    @if (Model.user != null)
    {
    <form asp-action="Update" asp-controller="User">
        <div class="form-group">
            <label asp-for="user.Username">Username:</label>
            <input asp-for="user.Username" type="text" value="@Model.user.Username" class="form-control" />
            <span asp-validation-for="user.Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="user.Email">Email:</label>
            <input asp-for="user.Email" type="email" value="@Model.user.Email" class="form-control" />
            <span asp-validation-for="user.Email" class="text-danger"></span>
        </div>
        <input asp-for="user.Id" type="hidden" value="@Model.user.Id" />
        <input type="submit" value="Update User" class="btn btn-default"/>
</form>
    }
    else
    { 
        <h2>No user found</h2>
    }
</div>


