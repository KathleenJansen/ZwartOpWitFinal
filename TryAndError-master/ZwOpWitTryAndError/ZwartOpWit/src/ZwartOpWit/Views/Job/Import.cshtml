@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model ZwartOpWit.Models.Viewmodels.JobImportVM
@{
    ViewData["Title"] = "View";
}

<h1>@Localizer["Import"]</h1>
<form method="post" asp-action="Import" asp-controller="Job" enctype="multipart/form-data">
    <div class="form-group">
        <input type="file" name="files" multiple class="form-control" />
    </div>
	<input asp-for="machineType" type="hidden" value="@Model.machineType" />
    <input type="submit" value="@Localizer["Upload"]" class="btn btn-default" />
</form>

