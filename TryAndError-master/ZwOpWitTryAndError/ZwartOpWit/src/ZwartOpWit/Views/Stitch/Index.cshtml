@{

}
<h1> Jobs to do @Model.StitchId</h1>
<div>
    <form asp-controller="Stitch" asp-action="PlanStitch" asp-route-StitchId="@Model.StitchId">
        Delivery Date:
        <input type="date" name="date" value="@Model.date"/>
        <input type="submit"/> 
        <p>@Model.date</p>
    </form>
</div>
<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>JobNumber</th>
                <th>Quantity</th>
                <th>PaperInside</th>
                <th>PaperCover</th>
                <th>Start this Job</th>
                <th>L-Stitch</th>
                <th>U-Stitch72</th>
                <th>U-Stitch48</th>
                <th>i-Sitch</th>
                <th>Out</th>
            </tr>
        </thead>
        <tbody>
            @{ foreach (var s in Model.stitchJobsList) {
                    <tr>
                        <td>@s.JobNumber</td>
                        <td>@s.Quantity</td>
                        <td>@s.PaperBw</td>
                        <td>@s.PaperCover</td>
                        <td>
                            <a asp-controller="Stitch" asp-action="StartStitch" class="btn btn-default"><span class="glyphicon glyphicon-record"></span></a>
                        </td>
                        <td>
                            <a asp-controller="Stitch" asp-action="PlanStitch" asp-route-id="@s.Id" asp-route-StitchId="2" asp-route-date="@Model.date" class="btn btn-default"><span class="glyphicon glyphicon-record"></span></a>
                        </td>
                        <td>
                            <a asp-controller="Stitch" asp-action="PlanStitch" asp-route-id="@s.Id" asp-route-StitchId="3" asp-route-date="@Model.date" class="btn btn-default"><span class="glyphicon glyphicon-record"></span></a>
                        </td>
                        <td>
                            <a asp-controller="Stitch" asp-action="PlanStitch" asp-route-id="@s.Id" asp-route-StitchId="4" asp-route-date="@Model.date" class="btn btn-default"><span class="glyphicon glyphicon-record"></span></a>
                        </td>
                        <td>
                            <a asp-controller="Stitch" asp-action="PlanStitch" asp-route-id="@s.Id" asp-route-StitchId="5" asp-route-date="@Model.date" class="btn btn-default"><span class="glyphicon glyphicon-record"></span></a>
                        </td>
                        <td>
                            <a asp-controller="Stitch" asp-action="PlanStitch" asp-route-id="@s.Id" asp-route-StitchId="1" asp-route-date="@Model.date" class="btn btn-default"><span class="glyphicon glyphicon-record"></span></a>
                        </td>
                    </tr>
             }
            }
        </tbody>
    </table>
</div>

